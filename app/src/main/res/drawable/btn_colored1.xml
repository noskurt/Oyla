<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dip" />
            <stroke android:width="2dip" android:color="@color/kulerColor3" />
            <gradient android:angle="90" android:endColor="@color/kulerColor3" android:startColor="@color/kulerColor3" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dip" />
            <stroke android:width="2dip" android:color="@color/kulerColor3" />
            <solid android:color="@color/kulerColor3" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dip" />
            <stroke android:width="2dip" android:color="@color/kulerColor4" />
            <gradient android:angle="90" android:endColor="@color/kulerColor4" android:startColor="@color/kulerColor4" />
        </shape>
    </item>
</selector>