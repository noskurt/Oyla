<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblVoteCountWithout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblVoteCountWithout">

        <ProgressBar
            android:id="@+id/pbVoteCountWithout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Horizontal" />

        <TextView
            android:id="@+id/txtVoteCountWithout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="@android:color/black"
            android:textAlignment="textEnd"
            android:background="#00000000"
            android:layout_alignStart="@id/pbVoteCountWithout"
            android:layout_alignTop="@id/pbVoteCountWithout"
            android:layout_alignEnd="@id/pbVoteCountWithout"
            android:layout_alignBottom="@id/pbVoteCountWithout" />

    </RelativeLayout>

</RelativeLayout>