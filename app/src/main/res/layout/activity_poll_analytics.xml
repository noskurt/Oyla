<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kulerColor2"
    android:orientation="vertical"
    tools:context="com.ygznsl.noskurt.oyla.PollAnalyticsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txPollTitlePollAnalytics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_colored3"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_voteCount"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="9pt"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/relOptionsPollAnalytics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/text_detailedAnalysis"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="9pt"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btnLeftPollAnalytics"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/content_descriptionLeft"
                    android:src="@drawable/left_disabled" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/btnLeftPollAnalytics">

                    <RelativeLayout
                        android:id="@+id/relDetailedAnalysisCategoryPollAnalytics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/btnRightPollAnalytics">

                        <TextView
                            android:id="@+id/txtDetail1PollAnalytics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/text_accordingToGender"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="9pt"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/txtDetail2PollAnalytics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/text_accordingToAge"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="9pt"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtDetail3PollAnalytics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/text_accordingToCity"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="9pt"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/btnRightPollAnalytics"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/content_descriptionRight"
                        android:src="@drawable/right" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/txtUserCannotSeeDetailedAnalysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_userCannotSeeDetailedAnalysis"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="7pt"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDetailedAnalysisPollAnalytics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_colored2"
                android:text="@string/text_btnDetailedAnalysis"
                android:textColor="@color/kulerColor2" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
